<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="root" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Text text="Photos Application Login">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
      <font>
         <Font size="33.0" />
      </font>
    </Text>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Username">
      <font>
         <Font size="16.0" />
      </font>
   </Text>

    <TextField fx:id="userInput" alignment="BASELINE_LEFT" onAction="#login" promptText="Enter Username" />

    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#login" text="Login" />
        <Button onAction="#onQuitButtonClick" text="Quit Application" />
    </HBox>

    <Label fx:id="ErrorText" textFill="RED">
      <font>
         <Font size="16.0" />
      </font></Label>
</VBox>
